{% extends 'admin/base.html.twig' %}

{% block title %}Administration des rencontres.{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-10">
            <h1 class="my-5">Gestion des rencontres</h1>
        </div>
        <div class="col">
            <a href="{{ path('admin_rencontres_create')}}" class="btn btn-primary my-5">Ajouter une rencontre</a>
        </div>
    </div>
    
    <table class="table table-over">
        <thead>
            <tr>
                <th>IdMatch</th>
                <th>Slug</th>
                <th>Statut</th>
                <th>Equipe D</th>
                <th>Equipe E</th>
                <th>Stade</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for renc in pagination.data %}
            <tr>
                <td><span class="badge badge-primary rounded">{{renc.id}}</span></td>
                <td>{{renc.slug}}</td>
                <td>{{renc.statut}}</td>
                <td>{{renc.equipesD.nom}}</td>
                <td>{{renc.equipesE.nom}}</td>
                <td>{{renc.stades.nom}}</td>
                <td class="text-center">
                    <a href="{{ path('admin_rencontres_edit', {'id': renc.id})}}" class="badge badge-pill badge-primary">Edit</a>
                    <a href="{{ path('admin_rencontres_delete', {'id': renc.id})}}" class="badge badge-pill badge-danger">Suppr</a>
                </td> 
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {{pagination.display()}}
</div>

{% endblock %}